<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="icon" href={{ asset('images/smiley.png')}}>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            
        {% endblock %}
    </head>
    <body>
        <div class="bg-dark d-flex">
            <div class="color">{{ 'now'|date('d - m -Y') }}</div>
        </div>
        <nav class="homeConatainer navbar navbar-expand-lg navbar-light bg-dark">
            {% if app.user %}
                <div class="nav sb-nav-link-icon"><a class="color" href={{ path('app_sas') }}> SAS</a></div>
                <div class="nav sb-nav-link-icon"><a class="color" href={{ path('app_phrase') }}> Texte auto</a></div>
                <div class="chatVisible color"><i class="fa-brands fa-rocketchat"></i></div>
                <div class="nav sb-nav-link-icon"><a class="color" href={{ path('app_home') }}> ACCEUIL</a></div>
                <div class="nav sb-nav-link-icon"><a class="color" href="{{ path('app_logout') }}">DECONNEXION</a></div>
            {% else %}
                <div class="nav sb-nav-link-icon"><a class="color" href={{ path('app_home') }}> ACCEUIL</a></div> 
                <div class="nav sb-nav-link-icon"><a class="color" href="{{ path('app_register') }}">Cr√©er Compte</a></div>
                <div class="nav sb-nav-link-icon"><a class="color" href="{{ path('app_login') }}">CONNEXION</a></div>                
            {% endif %}
        </nav>
        {# <div id="editor">This is some sample content.</div> #}
               
        {% block body %}
       
        {% endblock %}
